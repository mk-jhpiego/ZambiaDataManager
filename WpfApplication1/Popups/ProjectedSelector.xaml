<Window x:Class="ZambiaDataManager.Popups.ProjectedSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZambiaDataManager.Popups"
        mc:Ignorable="d" Height="320" Width="549" Background="#FF3F3F46">
    <Grid Margin="24,-14,13,14">
        <StackPanel>
            <Label Margin="0,20,-0.4,5" >Please select the default project to use for this session</Label>
            <CheckBox x:Name="chkRememberSelection"                       
                      Content="Remember my selection" FontWeight="Bold" Margin="100,15,80.6,0">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </CheckBox.LayoutTransform>
            </CheckBox>
            <Button x:Name="bDOD" Content="DOD" 
        		HorizontalAlignment="Center" Height="45" Margin="0,5,0,0"                     
        		VerticalAlignment="Top" Width="345" FontSize="16" FontWeight="SemiBold" 
        		FontStretch="Expanded"
        		HorizontalContentAlignment="Center"
        		VerticalContentAlignment="Center" Background="#FFD3CBCB"
                    Click="bVmmc_Click"
               />
            <Button x:Name="bVmmc" Content="IHP VMMC" 
        		HorizontalAlignment="Center" Height="45" Margin="0,5,0,0" 
        		VerticalAlignment="Top" Width="345" FontSize="16" FontWeight="SemiBold" 
        		FontStretch="Expanded"
        		HorizontalContentAlignment="Center"
        		VerticalContentAlignment="Center" Background="#FFD3CBCB"
                    Click="bVmmc_Click"
               />
            <Button x:Name="bTraining" Content="IHP Training and Capacity Building" 
        		HorizontalAlignment="Center" Height="45" Margin="0,5,0,0" 
        		VerticalAlignment="Top" Width="345" FontSize="16" FontWeight="SemiBold" 
        		FontStretch="Expanded"
        		HorizontalContentAlignment="Center"
        		VerticalContentAlignment="Center" Background="#FFD3CBCB"
                    Click="bVmmc_Click"
               />
            <Button x:Name="bGeneral" Content="General" 
        		HorizontalAlignment="Center" Height="45" Margin="0,5,0,0" 
        		VerticalAlignment="Top" Width="345" FontSize="16" FontWeight="SemiBold" 
        		FontStretch="Expanded"
        		HorizontalContentAlignment="Center"
        		VerticalContentAlignment="Center" Background="#FFD3CBCB"
                    Click="bVmmc_Click"
               />


        </StackPanel>
    </Grid>
</Window>
